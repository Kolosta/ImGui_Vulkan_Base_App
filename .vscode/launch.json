{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Debug Vulkan (Native Debug GDB)",
        "type": "gdb",
        "request": "launch",
        "target": "${command:cmake.launchTargetPath}",
        "cwd": "${workspaceFolder}",
        "gdbpath": "C:/msys64/mingw64/bin/gdb.exe",
        "env": {
            "PATH": "C:/msys64/mingw64/bin;${workspaceFolder}/build/_deps/sdl3-build;${env:PATH}"
        },
    }
  ]
}